<%- include ('../includes/header.ejs') %>
    <div class="container">
        <% if (message.length > 0) { %>
            <% message.forEach(msg => { %>
                <div class="notification is-light <%= msg.type %> ">
                    <button class="delete"></button>
                    <%= msg.text %> 
                </div>
            <% }) %>
        <% } %>

        <form action="/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" type="text" name="name" value="<%= oldForm.length > 0 ? oldForm[0].name : '' %>" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Email</label>
                <div class="control">
                    <input class="input" type="email" name="email" value="<%= oldForm.length > 0 ? oldForm[0].email : '' %>" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Password</label>
                <div class="control">
                    <input class="input" type="password" name="password" value="<%= oldForm.length > 0 ? oldForm[0].password : '' %>" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Confirm Password</label>
                <div class="control">
                    <input class="input" type="password" name="confirm_password" value="<%= oldForm.length > 0 ? oldForm[0].confirm_password : '' %>" required>
                </div>
            </div>

            <button class="button is-success" type="submit">
                <span>Register</span>
                <span class="icon is-small">
                    <i class="fas fa-arrow-right"></i>
                </span>
            </button>
        </form>
    </div>
<%- include ('../includes/footer.ejs') %>