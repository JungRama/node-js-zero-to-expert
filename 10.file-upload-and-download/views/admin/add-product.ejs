<%- include ('../includes/header.ejs') %>
    <div class="container">

        <% if (message.length > 0) { %>
            <% message.forEach(msg => { %>
                <div class="notification is-light <%= msg.type %> ">
                    <button class="delete"></button>
                    <%= msg.text %> 
                </div>
            <% }) %>
        <% } %> 

        <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">

            <div class="field">
                <label class="label">Product Image</label>
                <div class="control">
                    <input type="file" name="image">
                </div>
            </div>


            <div class="field">
                <label class="label">Product Name</label>
                <div class="control">
                    <input class="input" type="text" name="title" placeholder="eg. Macbook Pro 2019" value="<%= oldForm.length > 0 ? oldForm[0].title : '' %>" required>
                </div>
            </div>

            <div class="field">
                <label class="label">Description</label>
                <div class="control">
                    <textarea name="description" class="textarea" id="" cols="30" rows="10" placeholder="eg. This is the best macbook"><%= oldForm.length > 0 ? oldForm[0].description : '' %></textarea>
                </div>
            </div>

            <div class="field">
                <label class="label">Price</label>

                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                        <input class="input" name="price" type="number" placeholder="eg. 100000" value="<%= oldForm.length > 0 ? oldForm[0].price : '' %>" required>
                        <span class="icon is-small is-left">
                            RP
                        </span>
                    </p>
                </div>
            </div>

            <button class="button is-success" type="submit">
                <span>Save</span>
                <span class="icon is-small">
                    <i class="fas fa-check"></i>
                </span>
            </button>
        </form>
    </div>
<%- include ('../includes/footer.ejs') %>